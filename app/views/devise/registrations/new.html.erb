<div class= "row">
  <% if params[:plan] == '2' %>
   <div class="col-md-6 col-md-offset-3 text-center">
     <h1>Pro Account</h1>
     <p>Sign up for the pro account for $10/month and get access to the community and contact information</p>
   </div>
   <% else %>
    <div class="col-md-6 col-md-offset-3 text-center">
     <h1>Basic Account</h1>
     <p>Sign up for free and get a basic access to the community.</p>
   </div>
   <% end %>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
    <h2>Sign up</h2>
    <% if params[:plan] =='2' %>
    
      <%= render "pro_form" %>
    
    <% else %>
      
      <%= render "basic_form" %>
    
    <%end%>

    <%= render "devise/shared/links" %>
    </div>
   </div>
</div>  